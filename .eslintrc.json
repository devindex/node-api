{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "no-await-in-loop": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off"
  }
}
